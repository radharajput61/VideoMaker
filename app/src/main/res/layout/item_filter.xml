<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:gravity="center"
    android:orientation="vertical"
    android:layout_width="80.0dip"
    android:layout_height="80.0dip"
    android:layout_margin="4.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.devchie.videomaker.view.RoundRectView
        android:id="@id/filterContainer"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:shape_roundRect_bottomLeftRadius="10.0dip"
        app:shape_roundRect_bottomRightRadius="10.0dip"
        app:shape_roundRect_topLeftRadius="10.0dip"
        app:shape_roundRect_topRightRadius="10.0dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:id="@id/filter_img"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:background="@color/highlighted_text_material_dark"/>

            <TextView
                android:id="@id/filter_txt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_cornor_radious_round"
                android:gravity="center"
                android:lines="1"
                android:paddingTop="2dp"
                android:paddingBottom="6dp"
                android:textColor="@color/white"
                android:textColorHint="@color/notification_icon_bg_color"
                android:textSize="11.0sp"
                android:theme="@style/TextBelowImage" />
        </RelativeLayout>
    </com.devchie.videomaker.view.RoundRectView>

</RelativeLayout>